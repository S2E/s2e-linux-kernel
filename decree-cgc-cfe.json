{
    "description": "A Debian-based i386 image for the CGC CFE \"DECREE\" kernel",
    "variables": {
        "user": "s2e",
        "password": "s2e",
        "s2e_install": null,
        "headless": "false",
        "snapshot_name": "ready"
    },
    "builders": [{
        "name": "decree-cgc-cfe",
        "vm_name": "decree-cgc-cfe.raw",
        "type": "qemu",
        "headless": "{{user `headless`}}",

        "qemu_binary": "qemu-system-i386",
        "qemuargs": [
            ["-smp", "4"]
        ],

        "format": "raw",
        "disk_size": 10000,

        "iso_url": "http://cdimage.debian.org/debian-cd/current/i386/iso-cd/debian-8.7.1-i386-netinst.iso",
        "iso_checksum_url": "https://cdimage.debian.org/debian-cd/current/i386/iso-cd/MD5SUMS",
        "iso_checksum_type": "md5",

        "ssh_username": "{{user `user`}}",
        "ssh_password": "{{user `password`}}",
        "ssh_wait_timeout": "40m",

        "net_device": "e1000",
        "disk_interface": "ide",

        "http_directory": "http",

        "boot_wait": "20s",
        "boot_command": [
            "<esc><wait><wait><wait><wait>",
            "install <wait>",
            "preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed.cfg <wait>",
            "debian-installer=en_US locale=en_US keymap=us <wait>",
            "auto <wait>",
            "netcfg/get_hostname={{ .Name }} <wait>",
            "netcfg/get_domain= <wait>",
            "fb=false <wait>",
            "debconf/frontend=noninteractive <wait>",
            "passwd/user-fullname={{user `user`}} <wait>",
            "passwd/user-password={{user `password`}} <wait>",
            "passwd/user-password-again={{user `password`}} <wait>",
            "passwd/username={{user `user`}} <wait>",
            "<enter><wait>"
        ]
    }],
    "provisioners": [{
        "type": "file",
        "source": "decree-cgc-cfe",
        "destination": "/tmp"
    },
    {
        "type": "file",
        "source": "include",
        "destination": "/tmp"
    },
    {
        "type": "file",
        "source": "{{user `s2e_install`}}/guest-tools32/",
        "destination": "/home/{{user `user`}}"
    },
    {
        "type": "shell",
        "execute_command": "echo '{{user `password`}}' | {{.Vars}} sudo -E -S bash '{{.Path}}'",
        "environment_vars": [
            "S2E_USER={{user `user`}}",
            "S2E_SNAPSHOT_NAME={{user `snapshot_name`}}",
            "S2E_KERNEL_DIR=decree-cgc-cfe"
        ],
        "scripts": [
            "scripts/setup.sh",
            "scripts/decree-setup.sh",
            "scripts/install-kernel.sh"
        ]
    }],
    "post-processors": [{
        "type": "manifest"
    }]
}
